@model WebApplicationManagementFootballLeague.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Log in";
}
<div class="box-sigin">
    <div class="page-header">
        <h1 style="text-align: center">Logowanie</h1>
    </div>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        if (ViewBag.ErrorMessage != null)
        {
        <div class="alert alert-danger" role="alert" style="font-size: 15px;">
            <p>@ViewBag.ErrorMessage</p>
        </div>
        }

        <form class="form-signin" id="signin-form" style="margin-right: 0px">
            <div class="row roww">
                <div class="col-sm-12">
                    <div class="input-group textbox-in-login">
                        <span class="input-group-addon" style="background-color: white;"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.TextBoxFor(m => m.UserName, new { @type = "text", @name = "UserName", @class = "form-control UserName", @placeholder = "E-mail" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="input-group textbox-in-login">
                        <span class="input-group-addon" style="background-color: white;"><span class="glyphicon glyphicon-lock"></span></span>
                        @Html.PasswordFor(m => m.Password, new { @type = "text", @class = "form-control", @placeholder = "Hasło" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
            @Html.CheckBoxFor(m => m.RememberMe)
            <label style="font-size: 13px">Zapamiętaj</label>
            <br />
            <br />

            <div class="row roww">
                <div class="col-xs-6">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" value="Log in">Zaloguj</button>
                </div>
                <div class="col-xs-6">
                </div>
            </div>
        </form>
    }
</div>
<script src="~/Scripts/jquery.qtip.validation.js"></script>
